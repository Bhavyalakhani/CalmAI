# Airflow
AIRFLOW_UID=50000
AIRFLOW_FERNET_KEY=
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=

# Postgres (internal to Docker network)
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow

# CalmAI
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
MONGODB_URI=
MONGODB_DATABASE=calm_ai

# DVC + GCS (for data versioning)
# Path to your GCS service account JSON key file (mounted read-only into containers)
GCS_KEY_FILE=./calm-ai-dvc-key.json

# SMTP (for Airflow email_on_failure alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_STARTTLS=True
SMTP_SSL=False
SMTP_USER=
SMTP_PASSWORD=
SMTP_MAIL_FROM=
